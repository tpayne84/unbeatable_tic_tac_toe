<div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
          <p id="notice"><%= notice %></p>
            <div class="jumbotron center">
            <h1>Past Games</h1>
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Human</th>
                  <th>vs</th>
                  <th>Computer</th>
                  <th>Remove</th>
                </tr>
              </thead>
              <tbody>
              <% @games.each do |game| %>
                <tr>
                  <td><%= link_to "#{game.players[1].name}", game %></td>
                  <td>vs</td>
                  <td><%= link_to "#{game.players[0].name}", game %></td>
                  <td><%= link_to 'Remove', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="bs-example">
              <p>
                <%= link_to 'New Game', new_game_path, :class => "btn btn-primary btn-lg btn-block" %>
              </p>
            </div>
          </div>
        </div>
  </div>
</div>
